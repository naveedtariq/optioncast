<div class="main-login col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
  <div class="logo"><a href="<%=root_url%>">FinancialRank</a></div>
  <!-- start: LOGIN BOX -->
  <div class="box-login">
    <h3>Sign Up</h3>
    <div class="errorHandler alert alert-danger no-display"> <%= render '/shared/error_messages' %>   </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <div class="form-group">
              <span class="input-icon input-icon-right">
                <%= f.email_field :email, required:true, autofocus: true, class:"form-control", value:nil, placeholder:"Email" %>
                <i class="fa fa-cog"></i> </span>
          <!-- To mark the incorrectly filled input, you must add the class "error" to the input -->
          <!-- example: <input type="text" class="login error" name="login" value="Username" /> -->
        </div>
      </fieldset>
      <fieldset>
        <div class="form-group">
              <span class="input-icon input-icon-right">
                <%= f.password_field :password, required:true, autocomplete: "off", class:"form-control password", placeholder:"Password" %>
                <i class="fa fa-lock"></i>
                 </span>
        </div>
      </fieldset>
      <fieldset>
        <div class="form-group ">
              <span class="input-icon input-icon-right">
                <%= f.password_field :password_confirmation, required:true, autocomplete: "off", class:"form-control password_confirmation", placeholder:"Password confirmation" %>
                <i class="fa fa-lock"></i>
                 </span>
        </div>
      </fieldset>

      <div class="form-actions">
        <div>
          <%= f.submit"Sign Up", class:"btn btn-bricky", style:"width: 200px"%>
        </div>
        <div>
          <span align=right>
            <p><a href="/users/guest">Skip</a> Sign Up and use Guest account<p>
          </span>
        </div>
      </div>
    <% end %>


  </div>
  <!-- end: LOGIN BOX -->

</div>


<!-- end: BODY -->

 